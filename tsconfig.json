{
  "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "commonjs",
      "target": "es6",
      "jsx": "react",
      "lib": ["dom", "dom.iterable", "es5", "es2015", "es2016"],
      "declaration": true,
      "esModuleInterop": true,
      "baseUrl": ".",
      "paths": {
          "src/*": ["./src/*"],
      },
      "experimentalDecorators": true,
  },
  "include": [
      "./src/**/*",
      "./declarations/*"
  ],
  "exclude": ["node_modules"]
}
